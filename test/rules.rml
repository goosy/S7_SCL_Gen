--- # 第1个任务

config_path: .

attributes:
  title:
    dist: 替换测试

rules:

- pattern:
    type: convert
    feature: AI
  actions:
  - action_type: replace
    template: template.md
    distance: '{{title[$.cpu_name]}}.md'
- pattern: '*'
  actions:
  - action_type: replace
    output_dir: target
- pattern:
    type: copy
  actions: delete

--- # 第2个任务

config_path: .

attributes:
  title:
    dist: 合并与新建测试

rules:
- pattern:
    feature: [AI, alarm]
  scope: origin
  actions:
  - action_type: merge
    feature: OS_alarms
    cpu_name: dist
    template: template.md
    distance: AI_alarm.md
    output_dir: '{{$.cpu_name}}'
- scope: origin
  # add 动作即可以依赖匹配项，也可以不依赖匹配项
  # 本规则没有 pattern ，不产生依赖的匹配项
  # 无匹配项意味着同时也不能表达式替换
  actions:
  - action_type: add
    cpu_name: dist
    feature: OS_alarms
    platform: 'step7',
    type: copy
    IE: utf8
    OE: gbk
    line_ending: CRLF
    source: template.md
    distance: template
    input_dir: .
    output_dir: dist
- pattern: '*'
  scope: origin
  actions: delete

--- # 第3个任务

config_path: .

attributes:
  title: 相交测试
rules:
- pattern:
    type: copy
  actions:
  - action_type: replace
    tags: { replace: true} # 对tags 来说，都是应用 join 规则
    replace_a: [old]
    replace_o:
      desc: replace object
  - action_type: replace
    replace_a: [new]
    replace_o:
      type: replace
  - action_type: join
    tags: { join: true} # 对tags 来说，都是应用 join 规则
    join_a: [old]
    join_o:
      desc: join object
  - action_type: join
    join_a: [new]
    join_o:
      type: join
- actions:
  - action: join
    list: new

--- # 第4个任务

config_path: .

attributes:
  title: 文档规则测试
rules:
- pattern:
    feature: '!AI'
  scope: origin
  actions: delete
- pattern:
    feature: AI
    type: convert
  scope: origin
  actions:
  - action_scope: matched
    action_type: replace
    template: alarms.template
  - action_scope: matched
    rules: # 即默认了 `action_type: inner_rules`
    - pattern:
        $enable_AH: {value: true}
      scope: origin
      actions:
      - action_type: add
        action_scope: matched
        tagname: 'S7Program/{{$.DB.name}}.AH_flag'
        location: '{{$.location}}'
        event: '{{$.type}}高高报警'
        PV1: 'S7Program/{{$.DB.name}}.AH_PV'
    - pattern:
        $enable_WH: {value: true}
      scope: origin
      actions:
      - action_type: add
        action_scope: matched
        tagname: 'S7Program/{{$.DB.name}}.WH_flag'
        location: '{{$.location}}'
        event: '{{$.type}}高警告'
        PV1: 'S7Program/{{$.DB.name}}.WH_PV'
    - pattern:
        $enable_WL: {value: true}
      scope: origin
      actions:
      - action_type: add
        action_scope: matched
        tagname: 'S7Program/{{$.DB.name}}.WL_flag'
        location: '{{$.location}}'
        event: '{{$.type}}低警告'
        PV1: 'S7Program/{{$.DB.name}}.WL_PV'
    - pattern:
        $enable_AL: {value: true}
      scope: origin
      actions:
      - action_type: add
        action_scope: matched
        tagname: 'S7Program/{{$.DB.name}}.AL_flag'
        location: '{{$.location}}'
        event: '{{$.type}}低低报警'
        PV1: 'S7Program/{{$.DB.name}}.AL_PV'
    - pattern: '*'
      scope: origin
      actions: delete
...
